<mvc:View controllerName="C05.zprojectteste1202.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l ="sap.ui.layout"
    xmlns:core ="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <l:VerticalLayout>
                <Input id="idInput1"
                    placeholder="숫자를 입력하세요" 
                    valueStateText="Number must not be empty." 
                    />
                <Select width="100%" id="idSelect">
                    <core:Item  key="plus" text="+"/>
                    <core:Item  key="minus" text="-"/>
                    <core:Item  key="multiply" text="*"/>
                    <core:Item  key="divide" text="/"/>
                </Select>
                <Input id="idInput2" 
                    placeholder="숫자를 입력하세요"/>
                <Button width="100%" text="Calc" type="Emphasized" press="onBtnPress" />
            </l:VerticalLayout>
        </content>
    </Page>
</mvc:View>
