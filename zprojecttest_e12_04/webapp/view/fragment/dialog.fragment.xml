<core:FragmentDefinition 
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog id="Dialog" title="TODO List " beforeOpen="onBeforeOpen">
        <content>
            <HBox height="60px" alignItems="Center" justifyContent="Center">
                <Label labelFor= "todoInput" text="My Todo" class="sapUiSmallMarginEnd"/>
                <Input id="todoInput" value="{root>/value}" />
            </HBox>
        </content>

        <beginButton>
            <Button text="save" press="onSave" type ="Emphasized"/>
        </beginButton>
        <endButton>
            <Button text="close" press="onClose"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>